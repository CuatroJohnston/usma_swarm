<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"           
    name="Hello Greedy Shooter Python">
  
  <run start="0.0" end="1000" dt="0.1" 
       time_warp="10" 
       enable_gui="true" 
       start_paused="true"/>
  
  <end_condition>one_team, time</end_condition> <!-- time, one_team, none-->  
  
  <terrain>mcmillan</terrain>  
  <background_color>191 191 191</background_color> <!-- Red Green Blue -->
  <gui_update_period>10</gui_update_period> <!-- milliseconds -->

  <plot_tracks>false</plot_tracks>
  <run_metrics weights="sasc">true</run_metrics>
  <show_plugins>false</show_plugins>
  
  <log_dir>~/swarm-log</log_dir>  
      
  <latitude_origin>35.721025</latitude_origin>
  <longitude_origin>-120.767925</longitude_origin>
  <altitude_origin>300</altitude_origin>
  
  <entity_interaction order="0">CaptureTheFlagInteraction</entity_interaction>
  
  <!-- uncomment "seed" and use integer for deterministic results -->
  <!--<seed>0</seed>--> 
  
  <!-- ========================== TEAM 1 ========================= 0.004598789 -->
  <entity>
    <team_id>1</team_id> 
    <color>77 77 255</color>
    <count>1</count>
    <health>1</health>
    <variance_x>50</variance_x>
    <variance_y>1000</variance_y>
    <x>-1000</x>
    <y>0</y>
    <heading>0</heading>        
    <altitude>200</altitude>
    <motion_model>SimpleAircraft</motion_model>
    <visual_model>wing.obj</visual_model>
    <texture>wing-blue.png</texture>
    <visual_scale>0.05</visual_scale>
    <visual_rotate>90 0 0 1</visual_rotate>
    <autonomy>GreedyShooterTest</autonomy>    
    <base>
      <x>-1000</x>
      <y>0</y>
      <z>0</z>
    </base>    
  </entity>

  <!-- ========================== TEAM 2 ========================= -->
  <entity>    
    <team_id>2</team_id>      
    <color>255 0 0</color>
    <count>1</count>
    <health>1</health>
    <variance_x>50</variance_x>
    <variance_y>1000</variance_y>
    <x>1000</x>
    <y>0</y>
    <heading>180</heading>        
    <altitude>200</altitude>
    <motion_model>SimpleAircraft</motion_model>
    <visual_model>wing.obj</visual_model>
    <texture>wing-red.png</texture>
    <visual_scale>0.05</visual_scale>
    <visual_rotate>90 0 0 1</visual_rotate>
    <autonomy>RedTactic</autonomy>    
    <base>      
      <x>1000</x>
      <y>0</y>
      <z>0</z>
    </base>    
  </entity>
  
</runscript>
